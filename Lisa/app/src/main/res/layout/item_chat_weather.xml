<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/text_gchat_date_europe_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="June 10"
        android:textColor="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image_gchat_profile_europe_cup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gchat_date_europe_cup"
        app:lottie_fileName="profile_photo_female.json"
        app:lottie_loop="true"
        app:lottie_repeatCount="4"
        app:lottie_autoPlay="true"/>
    <TextView
        android:id="@+id/text_gchat_user_europe_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Lisa"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_gchat_profile_europe_cup"
        app:layout_constraintTop_toBottomOf="@+id/text_gchat_date_europe_cup" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_gchat_message_europe_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#eef1f6"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/image_gchat_profile_europe_cup"
        app:layout_constraintTop_toBottomOf="@+id/text_gchat_user_europe_cup">

        <LinearLayout
            android:id="@+id/layout_gchat_container_europe_cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_gchat_message_europe_cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxWidth="260dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/message_bg_europe_cup"
        android:layout_height="270dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#eef1f6"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="@+id/image_gchat_profile_europe_cup"
        app:layout_constraintTop_toBottomOf="@+id/card_gchat_message_europe_cup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/date_europe_cup"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/message_bg_europe_cup"
        app:layout_constraintRight_toRightOf="@+id/message_bg_europe_cup"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="2021-06-20 17:00"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/weather_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/date_europe_cup"
        app:layout_constraintStart_toStartOf="@+id/message_bg_europe_cup"
        app:lottie_fileName="Weather/weather-snow-sunny.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>
    <TextView
        android:id="@+id/weather_title"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@+id/date_europe_cup"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        app:layout_constraintRight_toRightOf="@+id/date_europe_cup"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="25° 小雪"/>
    <TextView
        android:id="@+id/weather_summary"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@+id/weather_title"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        app:layout_constraintRight_toRightOf="@+id/date_europe_cup"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:text="今天白天有小雪，夜晚阴，比昨天热很多，现在25°，空气不错。"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#77D7DCE3"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/weather_summary"
        app:layout_constraintLeft_toRightOf="@+id/message_bg_europe_cup"
        app:layout_constraintRight_toRightOf="@+id/date_europe_cup"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_win_dir"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:text="南风"/>
                <TextView
                    android:id="@+id/weather_win_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:text="3级"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center|top"
                    android:src="@drawable/weather_wind"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_ultraviolet_ray"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:text="紫外线"/>
                <TextView
                    android:id="@+id/weather_ultraviolet_ray_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:text="弱"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center|top"
                    android:src="@drawable/weather__uv"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_humidity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:text="湿度"/>
                <TextView
                    android:id="@+id/weather_humidity_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:text="低"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center|top"
                    android:src="@drawable/weather_hum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_pressure"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:text="大气压"/>
                <TextView
                    android:id="@+id/weather_pressure_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:padding="00dp"
                    android:layout_gravity="center"
                    android:text="95Pha"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center|top"
                    android:src="@drawable/weather_pressure"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/weather_precipitation"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:text="降水量"/>
                <TextView
                    android:id="@+id/weather_precipitation_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:text="70"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center|top"
                    android:src="@drawable/weather_pcpn"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>